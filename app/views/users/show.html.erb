    <%= flash[:notice] %><br><br><br>

    <% if params[:twitter_params] %>
      <% @posts.each do |potential_feed| %>
      <div>
        <img src="<%= potential_feed.profile_image_url %>" alt="<%= potential_feed.username %>">

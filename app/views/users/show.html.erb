<div class='home'>
<span class='row'>
<h1>
  <span class='col-med-5'> <%= @current_user.username.upcase %>'S HUNGRY.</span> 
  <span class="col-xs-3"> 
    <%= form_tag(home_path(@current_user.id), method: :get) do %>
        <%= text_field_tag :feeder_params, params[:feeder_params], class:'form-control' %>
          <%= submit_tag "Search by name", :name =>'search by name', class: "btn btn-sml" %>
    <% end %> </span></h1>
</span>


  <div class="side_bar">This is where links to the individual feeds will go</div>
  <div id="posts">
    <%= flash[:notice] %><br><br><br>
    <% if params[:feeder_params] %>
      <%= form_for @feed do |f| %>
        <%= f.hidden_field :identifier, value: params[:feeder_params] %>
        <%= f.submit "Add #{params[:feeder_params]} to your feed" %>
        <% end %>
    <% end %>
    <%= will_paginate @posts %><br>
      <% @posts.each do |post| %>
        <% if post.url %>
          <%= link_to post.title, post.url %><br>
        <% else %>
          <%= post.title %>
        <% end %>
      by <%= post.author %><br><br>
      <%= post.summary.html_safe if post.summary %><br>
      <%= post.content.html_safe if post.content %><br>
    <br>
    <% end %>
  </div>


</div>
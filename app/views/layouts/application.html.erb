<!DOCTYPE html>
<html>
<head>
  <title>Gobblr</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <span class="navbar-brand"><%= image_tag('hand.png', height: 45) %>Gobblr</span>
            </div>
            <div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li><%= link_to 'About', '/about' %>
                    </li>
                    <% if @current_user %>
                    <li><%= link_to 'Sign Out', logout_path %>
                    </li>
                    <li><%= link_to 'Profile', '/profile' %>
                    </li>
                      <% else %>
                      <li><%= link_to 'Sign Up', '/auth/developer' %>
                      </li>
                    <li><%= link_to 'Sign In', '/auth/developer' %>
                    </li>
                    <% end %>
                </ul>
            </div>
          </nav>

<div class='container'>
<%= yield %>
</div>

</body>
</html>
